<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GpsActivity"
    >

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Latitude"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/lb_latitude"
        />

    <EditText
        android:id="@+id/edit_latitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/lb_latitude"
        />

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Longtitude"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/lb_longitude"
        android:layout_below="@+id/lb_latitude"
        />

    <EditText
        android:id="@+id/edit_longitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/lb_longitude"
        android:layout_below="@+id/edit_latitude"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get"
        android:layout_below="@id/edit_longitude"
        android:id="@+id/btn_get"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cuaca"
        android:layout_below="@id/btn_get"
        android:layout_marginTop="20dp"
        android:id="@+id/btn_cuaca"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="GeoCode"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/btn_cuaca"
        android:id="@+id/lb_geocode"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_geocode"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/lb_geocode"
        android:layout_below="@+id/btn_cuaca"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Address"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/lb_geocode"
        android:id="@+id/lb_address"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_address"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/lb_address"
        android:layout_below="@+id/edit_geocode"
        />
</RelativeLayout>